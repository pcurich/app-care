<form action="/settings/edit/{{setting._id}}?_method=PUT" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <div class="card border-secondary">
    <div class="card-header">Modificar configuraci√≥n</div>
    <div class="card-body">

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="nameSpace" class="col-sm-6 col-form-label">Contexto</label>
          <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" id="nameSpace" name="nameSpace" value="{{setting.nameSpace}}" autocomplete="off" />
          </div>
        </div>
        <div class="form-group col-md-6">
          <label for="name" class="col-sm-6 col-form-label">Nombre</label>
          <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" id="name" name="name" value="{{setting.name}}" autocomplete="off" />
          </div>
        </div>
      </div> 

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="key" class="col-sm-6 col-form-label">Clave</label>
          <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" id="key" name="key" value="{{setting.key}}" autocomplete="off" />
          </div>
        </div>
        <div class="form-group col-md-6">
          <label for="value" class="col-sm-6 col-form-label">Valor</label>
          <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" id="value" name="value" value="{{setting.value}}" autocomplete="off" />
          </div>
        </div>
      </div> 


    </div>
    <div class="card-footer">
      <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">Guardar</button>
      </div>
    </div>
  </div>
</form>

<div class="card">
  <div class="card-footer">
    <div class="form-group">
      <a href="/settings" class="btn btn-danger btn-block" type="submit">REGRESAR</a>
    </div>
  </div>
</div>
