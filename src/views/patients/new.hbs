<form action="/patients/new/{{doctor.userId}}" method="POST">
  <div class="card border-secondary">
    <div class="card-header">Nuevo paciente</div>
    <div class="card-body">

      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="name" class="col-sm-6 col-form-label">Nombre</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" value="{{patient.name}}" autocomplete="off" />
          </div>
        </div>
        <div class="form-group col-md-4">
          <label for="lastName" class="col-sm-6 col-form-label">Apellidos</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="lastName" name="lastName" value="{{patient.lastName}}" autocomplete="off" />
          </div>
        </div>
        <div class="form-group col-md-4">
          <label for="document" class="col-sm-6 col-form-label">Nro Documento</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="document" name="document" value="{{patient.document}}" autocomplete="off" />
          </div>
        </div>
      </div> 

      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="email" class="col-sm-6 col-form-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" value="{{patient.email}}" autocomplete="off" />
          </div>
        </div>
        <div class="form-group col-md-4">
          <label for="address" class="col-sm-6 col-form-label">Direccioón</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="address" name="address" value="{{patient.address}}" autocomplete="off" />
          </div>
        </div>
        <div class="form-group col-md-4">
          <label for="lastName" class="col-sm-6 col-form-label">Teléfono</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="phone" name="phone" value="{{patient.phone}}" autocomplete="off" />
          </div>
        </div>
      </div> 

      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="gender" class="col-sm-6 col-form-label">Género</label>
          <div class="col-sm-10">
            <select class="form-control" id="gender" name="gender">
              {{#each genders as |g|}}
              <option value={{g.name}}>{{g.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group col-md-4">
          <label for="state" class="col-sm-6 col-form-label">Estado</label>
          <div class="col-sm-10">
            <input type="checkbox" id="state" name="state" checked />
          </div>
        </div>
      </div>

    </div>
    <div class="card-footer">
      <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">Crear</button>
      </div>
    </div>
  </div>
</form>