<form action="/users/new" method="POST">
  <div class="card border-secondary">
    <div class="card-header">Nuevo Usuario</div>
    <div class="card-body">

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="name" class="col-sm-6 col-form-label">Nombre</label>
          <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" id="name" name="name" value="{{newUser.name}}" autocomplete="off" />
          </div>
        </div>
        <div class="form-group col-md-6">
          <div class="form-group col-md-6">
            <label for="state" class="col-sm-6 col-form-label">Estado</label>
            <div class="col-sm-6">
              <input type="checkbox" id="state" name="state" checked />
            </div>
          </div>
        </div>
      </div> 

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="email" class="col-sm-6 col-form-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control form-control-sm" id="email" name="email" value="{{newUser.email}}" autocomplete="off" />
          </div>
        </div>
        <div class="form-group col-md-6">
          <label for="state" class="col-sm-10 col-form-label">Contrase√±a</label>
          <div class="col-sm-10">
            <input type="password" id="password" name="password" class="form-control form-control-sm" />
          </div>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="rolId" class="col-sm-6 col-form-label">Rol</label>
          <div class="col-sm-10">
            <select class="form-control" id="rolId" name="rolId">
              {{#each rols as |r|}}
              <option value={{r._id}}>{{r.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group col-md-6">
          <label for="gender" class="col-sm-6 col-form-label">Genero</label>
          <div class="col-sm-10">
            <select class="form-control" id="gender" name="gender">
              {{#each genders as |g|}}
              <option value={{g.key}}>{{g.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
      </div>

    </div>
    <div class="card-footer">
      <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">Crear</button>
      </div>
    </div>
  </div>
</form>